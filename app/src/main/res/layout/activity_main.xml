<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="customView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.customview.CustomView
        android:id="@+id/sunrise_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:setImageDrawable="@drawable/ic_launcher_background"
        app:setTitle="Hi Pooria"
        tools:setSubTitle="5:25 AM" />

    <com.example.customview.CustomView
        android:id="@+id/sunset_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sunrise_custom_view"
        app:setImageDrawable="@drawable/ic_launcher_foreground"
        app:setTitle="Bye Pooria ^^"
        tools:setSubTitle="6:12 PM" />

    <com.example.customview.CustomView
        android:id="@+id/button232"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setImageDrawable="@drawable/ic_launcher_foreground"
        app:setTitle="Bye Posadsadsadoria ^^"
        tools:setSubTitle="6:12 PM"
        />


</androidx.appcompat.widget.LinearLayoutCompat>